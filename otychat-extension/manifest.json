{
  "manifest_version": 3,
  "name": "OtyChat Display Overlay",
  "version": "1.0.0",
  "description": "Overlay emoji reactions on Google Slides presentations",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://docs.google.com/presentation/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://docs.google.com/presentation/*"],
      "js": ["lib/socket.io.min.js", "content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["lib/socket.io.min.js"],
      "matches": ["https://docs.google.com/*"]
    }
  ]
}
